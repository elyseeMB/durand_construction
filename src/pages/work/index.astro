---
import Heading from "../../components/Heading.astro";
import HeadingSmart from "../../components/HeadingSmart.astro";
import { PhotoGrid } from "../../components/PhotoGrid.tsx";
import BottomPage from "../../components/blocks/BottomPage.astro";
import Layout from "../../layouts/Layout.astro";
const seo = {
  title: "Nos Réalisations",
  description:
    "Découvrez les projets architecturaux et chantiers réalisés par Durand Construction : maisons modernes, bâtiments durables, rénovations sur mesure.",
  image: "https://durand-construction.com/og-image.jpg",
  url: Astro.url.href,
};

const data = await fetch("https://patchworkarchitecture.co.nz/rss");
const rss = await data.text();
---

<Layout {...seo}>
  <div class="container">
    <Heading
      title="Découvrez nos réalisations architecturales"
      description="alliant excellence, durabilité et design sur mesure"
    />
    <BottomPage
      topic="work"
      classement="5.0"
      description="nous vous partageons ici l’envers du décor, les tendances qui nous animent et notre approche sur la manière de bâtir intelligemment."
    >
      <div class="projets">
        {
          Array.from({ length: 3 }, (_, k) => (
            <div class="gallery">
              <h5>Lorem ipsum dolor sit amet consectetur adipisicing elit.</h5>
              <PhotoGrid
                maxRows={4 + 1}
                client:load
                rss={rss}
                rowHeight={300}
                gap="0.5rem"
              />
            </div>
          ))
        }
      </div>
    </BottomPage>
  </div>
</Layout>

<style>
  .container .gallery {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-block: 4rem;
  }
</style>
