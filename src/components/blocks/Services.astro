<style>
  .bg-color {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: var(--durand-orange);
    padding-block: 10rem;
    color: var(--accents-8);
  }

  .description {
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    row-gap: 10rem;
  }

  .description .arrow {
    letter-spacing: -0.02em;
    font-size: 2.75rem;
    line-height: 1.13;
    grid-column: 1;
  }

  .description .arrow-2 {
    width: max-content;
    height: auto;
    letter-spacing: -0.02em;
    font-size: 2.75rem;
    line-height: 1.13;
    transition: 0.3s;
  }

  .description .left {
    grid-column: 1 / span 5;

    h3 {
      letter-spacing: -0.02em;
      font-size: 2.75rem;
      line-height: 1.13;
    }
  }

  .description .approach {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    grid-column: 2 / span 2;
    gap: 5rem;

    & ul {
      max-width: 300px;
      display: flex;
      flex-direction: column;

      & > * {
        position: relative;
        margin-bottom: 1rem;
        font-size: 0.8rem;
        line-height: 1.5;
        list-style: auto;
      }
    }

    span.indication {
      font-size: 2.75rem;
      width: max-content;
      height: auto;
      transform: rotate(90deg);
      margin-bottom: 1rem;
    }

    &:last-child {
      color: red !important;
    }
  }

  .description .image {
    grid-column: 4 / span 5;
    & img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      max-height: 100%;
    }
  }

  .description .text-description {
    grid-column: 2 / span 3;
    p {
      color: var(--accents-8);
    }
  }

  /* .description .text-description,
  .approach,
  .description .image {
    padding-block: 6rem;
  } */

  .description p {
    font-size: 0.8rem;
    margin-bottom: 1rem;
  }

  @media screen and (max-width: 800px) {
    .description .approach {
      grid-column: 1 / span 2;
      margin-inline: 1rem;
    }

    .description .image {
      grid-column: 3 / span 5;
    }
  }

  @media screen and (max-width: 600px) {
    .description {
      display: flex;
      flex-direction: column;
    }

    .description .approach ul {
      width: 100%;
      max-width: none;
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .description .approach .arrow-2 {
      transform: rotate(90deg);
    }

    .description .approach ul li {
      margin-inline: 1rem;
      padding: 0;
    }
  }
</style>
